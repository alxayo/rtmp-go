{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test: Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "showLog": true,
      "args": ["-test.v", "-count=1"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Test: bufpool package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/internal/bufpool",
      "args": ["-test.v", "-count=1"],
      "showLog": false
    },
    {
      "name": "Test: rtmp package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/internal/rtmp",
      "args": ["-test.v", "-count=1"],
      "showLog": false
    },
    {
      "name": "Run: RTMP Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/rtmp-server",
      "args": [],
      "env": {
        "LOG_LEVEL": "debug"
      }
    },
    {
      "name": "Attach: Pick Go Process",
      "type": "go",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
